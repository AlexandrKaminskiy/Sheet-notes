<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" 
    crossorigin="anonymous"/>
</head>
<body>
    <% if (typeof note === 'undefined') note = {} %>
    <% if (typeof readonly === 'undefined') readonly = false %>
    <div style="margin-left: 20px;">
      <form method="post" id="sendForm" action="<%= act %>" enctype="multipart/form-data">
          <div class="form-row">
            <div class="col-7" style="margin-bottom: 20px;">
              <input type="text" class="form-control" id="name" name="name" required="true"  placeholder="Name" value="<%=note.name%>">
            </div>
            <div class="col-7" style="margin-bottom: 20px;">
              <input type="number"  class="form-control" id="bpm" name="bpm" required="true"  placeholder="Bpm" value="<%=note.bpm%>">
            </div>
            <div class="col-7" style="margin-bottom: 20px;">
              <input type="number"  class="form-control" id="complexity" name="complexity" required="true" placeholder="Complexity" value="<%=note.complexity%>">
            </div>
            <div class="col-7" style="margin-bottom: 20px;">
              <input type="number"  class="form-control" id="duration" name="duration" required="true" placeholder="Duration" value="<%=note.duration%>">
            </div>
            <div class="col-7" style="margin-bottom: 20px;">
              <input type="text" class="form-control" id="instrument" name="instrument" required="true"  placeholder="Instrument" value="<%=note.instrument%>">
            </div>
            <div class="col-7" style="margin-bottom: 20px;">
              <input type="text" class="form-control" id="description" name="description" required="true" placeholder="Description" value="<%=note.description%>">
            </div>
            <div class="col-7" style="margin-bottom: 20px;">
              <input type="file" class="form-control" id="file" name="sheet">
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
          </div>
      </form>
    </div>
</body>
</html>